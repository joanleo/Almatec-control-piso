<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>C:/IntegrApps/almatec/logs/logs-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory> <!-- Número máximo de archivos históricos a mantener -->
        </rollingPolicy>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.almatec.controlpiso" level="DEBUG"/>

    <root level="DEBUG"> <!-- Cambiado a DEBUG para asegurar que todos los mensajes se registren -->
        <appender-ref ref="FILE"/>
    </root>
</configuration>
